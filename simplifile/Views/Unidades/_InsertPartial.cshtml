
@model simplifile.ViewModels.UnidadNegocio.UnidadNegocioInsertarViewModel
<!-- Modal -->
<div class="modal-body">
    <form asp-action="Insert">

        <div class="form-group">
            <label asp-for="UnId"></label>
            <input asp-for="UnId" class="form-control" />
            <span asp-validation-for="UnId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="EmpId"></label>
            <select asp-for="EmpId"
                    asp-items="@(ViewBag.Empresas)" class="form-control">
                <option value="">Seleccione la empresa</option>
            </select>
            <span asp-validation-for="EmpId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="UnRazonSocial"></label>
            <input asp-for="UnRazonSocial" class="form-control" />
            <span asp-validation-for="UnRazonSocial" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="UnRFC"></label>
            <input asp-for="UnRFC" class="form-control" />
            <span asp-validation-for="UnRFC" class="text-danger"></span>
        </div>

        <div class="form-group">
            <div>
                <div class="checkbox-inline ">
                    <label>
                        <input type="checkbox" asp-for="CargaFiel" id="carga-fiel" />
                        <label asp-for="CargaFiel"></label>
                    </label>
                </div>
            </div>
        </div>
        @{
            var hide = Model.CargaFiel ? "block" : "none";
        }
        <div id="field-data" style="display:@hide">
            <div class="form-group">
                <label asp-for="CerFiel"></label>
                <input asp-for="CerFiel" class="form-control"  accept=".cer"/>
                <span asp-validation-for="CerFiel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KeyFiel"></label>
                <input type="file" asp-for="KeyFiel" class="form-control" accept=".key" />
                <span asp-validation-for="KeyFiel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaswordFiel"></label>
                <input asp-for="PaswordFiel" type="password" class="form-control" />
                <span asp-validation-for="PaswordFiel" class="text-danger"></span>
            </div>
        </div>
    </form>
</div>