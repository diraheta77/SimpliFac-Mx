
@model simplifile.ViewModels.Account.RegisterViewModel
@{
    ViewData["Title"] = "Registrar nuevo usuario";
    Html.AddCssBody("register-page");
    Layout = "~/Views/Shared/_Auth.cshtml";
}
<div class="register-box">
    <div class="login-logo">
        <img src="~/images/logo2.png" />
    </div>

    <div class="register-box-body">
        <h3 class="login-box-msg">
            <i class="fa fa-user-plus"></i>
            Registrar usuario
        </h3>

        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">

            <div class="form-group has-feedback">
                <label asp-for="UsuCorreo"></label>
                <input asp-for="UsuCorreo" type="email" class="form-control" placeholder="Email" />
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                <span asp-validation-for="UsuCorreo" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-sm-12">
                    <label>Nombre</label>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6 pr-1">
                    <div class="form-group has-feedback">
                        <input asp-for="UsuNombre1" type="text" class="form-control" placeholder="Primer nombre" />
                        <span class="glyphicon glyphicon-user form-control-feedback"></span>
                        <span asp-validation-for="UsuNombre1" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-6 pl-1">
                    <div class="form-group has-feedback">
                        <input asp-for="UsuNombre2" type="text" class="form-control" placeholder="Segundo nombre" />
                        <span class="glyphicon glyphicon-user form-control-feedback"></span>
                        <span asp-validation-for="UsuNombre2" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12">
                    <label>Apellidos</label>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6 pr-1">
                    <div class="form-group has-feedback">
                        <input asp-for="UsuPaterno" type="text" class="form-control" placeholder="Apellido paterno" />
                        <span class="glyphicon glyphicon-user form-control-feedback"></span>
                        <span asp-validation-for="UsuPaterno" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-6 pl-1">
                    <div class="form-group has-feedback">
                        <input asp-for="UsuMaterno" type="text" class="form-control" placeholder="Apellido materno" />
                        <span class="glyphicon glyphicon-user form-control-feedback"></span>
                        <span asp-validation-for="UsuMaterno" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group has-feedback">
                <label asp-for="UsuTelefono"></label>
                <input asp-for="UsuTelefono" type="text" class="form-control" placeholder="Teléfono" />
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                <span asp-validation-for="UsuTelefono" class="text-danger"></span>
            </div>

            <div class="form-group has-feedback">
                <label asp-for="Password"></label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Contraseña" />
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group has-feedback">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirmar contraseña" />
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>


            <div class="row">
                <div class="col-xs-12 text-right">
                    <button type="submit" class="btn btn-primary btn-flat">
                        Registrase
                        <i class="fa fa-check-square-o"></i>
                    </button>
                </div>
            </div>
        </form>
        
        <div class="text-right mt-5">
            <a asp-controller="Account" asp-action="Login" class="text-center">Ya cuenta con un usuario de acceso</a>
        </div>

    </div>
    <!-- /.form-box -->
</div>
<!-- /.register-box -->
