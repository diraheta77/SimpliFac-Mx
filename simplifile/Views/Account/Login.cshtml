
@inject simplifile.Services.IParamaters parameters
@model simplifile.ViewModels.Account.LoginViewModel
@{
    Html.AddCssBody("login-page");
    ViewData["Title"] = "Login";
    ViewData["NuevaEmpresas"] = parameters.getGenParam(simplifile.Services.ParamsKeys.G09, "false");
    Layout = "~/Views/Shared/_Auth.cshtml";
}

    <div class="login-box">

            <!-- /.login-logo -->
        <div class="box box-primary">

            <div class="login-box-body">
                <div class="login-logo">
                    <img src="~/images/Logo_simplifac_original.png" />
                </div>

                <h3 class="login-box-msg">
                    <i class="fa fa-sign-in"></i>
                    Iniciar Sesión
                </h3>

                <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">

                    <div class="form-group has-feedback">
                        <input asp-for="Email" type="email" class="form-control" placeholder="Email" />
                        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group has-feedback">
                        <input asp-for="Password" type="password" class="form-control" placeholder="Contraseña" />
                        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="box-footer">
                        <div class="row ">
                            <div class="col-xs-12 text-right">

                                <button type="submit" class="btn btn-primary pull-right">
                                    Ingresar&nbsp;
                                    <i class="fa fa-check-square-o"></i>

                                </button>
                            </div>
                        </div>
                    </div>
                </form>

                <div class="text-center mt-5">
                    <br><br><br><br>
                    <a asp-controller="Account" asp-action="Forgot">¿Ha olvidado su contraseña?</a><br>

                    @if (@ViewData["NuevaEmpresas"].ToString() == "true")
                    {
                        <a asp-controller="Account" asp-action="Register" class="text-center">Registrarse como nuevo usuario</a>
                    }

                </div>

            </div>
            <div class="box-footer text-center">
                <strong>Copyright &copy; 2020 <a href="https://simplifile.mx" target="_blank">SimpliFile Solutions</a>.</strong><br>Todos los derechos reservados<br>
                <div class="pull-right hidden-xs">
                    <b>Version</b> 1.5
                </div>
            </div>
        </div>
            <!-- /.login-box-body -->
        </div>